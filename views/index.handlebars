<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">

    <div class="col-md-12">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <input type="text" id="bg" name="burger_name">
          <button type="submit">Place your Order</button>
          <p>Enter the burger of your desire and speed-up your journey to a Coronary Bypass</p>
        </div>
      </form>
    </div>

    <div class="col-md-6" id="ordered">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}.
              {{this.burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" id="submit">Devour it!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6" id="devoured">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}.
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>




